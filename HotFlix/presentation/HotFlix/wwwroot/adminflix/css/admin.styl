$white = #fff
$black = #000
$grey = #c0c0c0
$blue = #1a191f
$blue2 = #222028
$orange = #f9ab00
$yellow = #FFC312
$red = #EB5757
$green = #29b474
$orange2 = #f06629

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Source Sans Pro', sans-serif
	font-weight 400
	background-color $blue
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .4s
	cursor pointer
	transition-property color, background-color, border-color, opacity, box-shadow
	&:focus
		outline none
a
	text-decoration none
	transition .4s
	transition-property color, background-color, border-color, opacity, box-shadow
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .4s ease
	transition-property color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $orange
	color $white
	text-shadow none
::selection
	background $orange
	color $white
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background $blue

body::-webkit-scrollbar-thumb
	background-color $blue2
	outline 0 solid $white

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	width 100%
	background-color $blue
	z-index 100
	border-bottom 1px solid $blue2
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		position relative
		padding 0 15px
		width 100%
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		background-color $blue
		width auto
		img
			width auto
			height 20px
			display block
	&__btn
		display block
		width 22px
		height 20px
		position relative
		span
			display block
			position absolute
			height 2px
			width 22px
			background $black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .4s ease
			top 0px
			background-color $white
			border-radius 2px
			&:nth-child(2)
				top 8px
			&:nth-child(3)
				top 16px
		&--active
			span
				background-color $orange
			span:nth-child(1)
				top 8px
				transform rotate(45deg)
			span:nth-child(2)
				opacity 0
			span:nth-child(3)
				top 8px
				transform rotate(-45deg)
	@media (min-width: 1200px)
		display none

/*==============================
	Sidebar
==============================*/
.sidebar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	background-color $blue
	position fixed
	top 0
	left 0
	bottom 0
	z-index 101
	width 280px
	transform translateX(-100%)
	transition transform .4s ease
	border-right 1px solid $blue2
	&__logo
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		padding 0 30px
		background-color $blue
		width 100%
		position relative
		border-bottom 1px solid $blue2
		img
			width auto
			height 20px
			display block
	&__user
		padding 20px 30px
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		border-bottom 1px solid $blue2
	&__user-img
		width 40px
		height 40px
		border-radius 8px
		overflow hidden
		display block
		margin-right 15px
		img
			width 100%
	&__user-title
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		p
			color $white
			display block
			font-size 16px
			line-height 24px
			font-weight 600
			margin-bottom 0
		span
			display block
			color $grey
			font-size 12px
			line-height 16px
	&__user-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 8px
		background-color transparent
		color $white
		margin-left auto
		border 2px solid $orange
		i
			font-size 20px
		&:hover
			color $white
			background-color rgba($orange, .05)
	&__nav-wrap
		display block
		width 100%
		height calc(100vh - 240px)
		overflow-y auto
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		padding 30px 0
		width 100%
	&__nav-link
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 16px
		line-height 26px
		text-transform uppercase
		color $white
		position relative
		span
			margin-left 10px
		i
			font-size 20px
			&:last-child
				margin-left 5px
				font-size 12px
				margin-top 1px
		&:hover
			color $orange
		&--active
			color $orange
			cursor default
		&.show
			i
				&:last-child
					color $orange
	&__nav-item
		width 100%
		display block
		margin-bottom 15px
		position relative
		padding 0 30px
		&:last-child
			margin-bottom 0
	&__dropdown-menu
		position absolute
		background-color $blue2
		padding 15px 20px
		flex-direction column
		justify-content flex-start
		align-items flex-start
		min-width 180px
		border-radius 8px
		border none
		li
			margin-bottom 15px
			width 100%
			&:last-child
				margin-bottom 0
		a
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			font-size 16px
			line-height 20px
			color $white
			font-weight 400
			&:hover
				color $orange
		&.show
			display flex
	&__copyright
		margin-top auto
		padding 0 30px 20px
		color $grey
		font-size 12px
		line-height 20px
		width 100%
		a
			color $orange
			&:hover
				color $orange
				text-decoration underline
	&--active
		transform translateX(0)
	@media (min-width: 1200px)
		transform translateX(0)
		&__logo
			height 80px

/*==============================
	Main
==============================*/
.main
	position relative
	margin-top 70px
	padding 20px 0 40px
	&__title
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		position relative
		margin-bottom 6px
		border-bottom 1px solid $blue2
		padding-bottom 20px
		h2
			color $white
			font-weight 400
			font-size 32px
			line-height 100%
			margin-bottom 0
			b
				font-weight 700
	&__title-stat
		color $grey
		font-size 14px
		margin-left 20px
		margin-top 10px
	&__title-wrap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		margin-left auto
		width 100%
		margin-top 20px
	&__title-form
		position relative
		margin-top 20px
		width 100%
		input
