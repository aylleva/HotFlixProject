			height 40px
			color $white
			padding 0 50px 0 20px
			border-radius 8px
			background-color $blue2
			width 100%
			font-size 16px
			border 2px solid transparent
			&:focus
				border-color $orange
		button
			position absolute
			z-index 1
			top 0
			right 20px
			height 40px
			display flex
			flex-direction row
			justify-content center
			align-items center
			font-size 20px
			color $white
			&:hover
				color $orange
	&__title-link
		display flex
		justify-content center
		align-items center
		height 40px
		width 120px
		border-radius 8px
		border 2px solid $orange
		margin-left auto
		font-size 14px
		color $white
		text-transform uppercase
		&:hover
			color $white
			background-color rgba($orange, .05)
		&--wrap
			position absolute
			top 0
			right 0
			width auto
			padding 0 20px
	&__paginator
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 100%
	&__paginator-pages
		display inline-flex
		flex-direction row
		justify-content center
		align-items center
		font-size 14px
		height 36px
		width auto
		color $grey
		font-weight 400
		margin-top 40px
		cursor default
		border-radius 8px
		background-color $blue2
		padding 0 15px
	&__paginator-list
		display inline-flex
		flex-direction row
		justify-content center
		align-items center
		width auto
		margin-top 40px
		li
			margin-right 15px
			&:first-child
				a
					padding-left 10px
					span
						margin-left 4px
			&:last-child
				margin-right 0
				a
					padding-right 10px
					span
						margin-right 4px
		a
			display flex
			flex-direction row
			justify-content center
			align-items center
			height 36px
			width auto
			padding 0 15px
			color $white
			text-align center
			border-radius 8px
			background-color $blue2
			span
				font-size 14px
				line-height 20px
				text-transform uppercase
			i
				font-size 20px
			&:hover
				color $orange
	@media (min-width: 576px)
		&__title-wrap
			flex-direction row
			justify-content space-between
			align-items center
		&__title-form
			margin-top 0
			width 240px
	@media (min-width: 768px)
		padding 30px 0 40px
		&__title-stat
			margin-top 10px
		&__title-wrap
			width auto
			margin-top 0
		&__title
			padding-bottom 30px
		&__title-link
			&--wrap
				position relative
				top auto
				right auto
				margin-right 30px
		&__paginator-pages
			height 40px
			padding 0 20px
		&__paginator-list
			display none
	@media (min-width: 1200px)
		padding 0 15px 40px 295px
		margin-top 0
		&__title
			padding-bottom 0
			height 80px

/*==============================
	Catalog
==============================*/
.catalog
	position relative
	width 100%
	overflow hidden
	&__table
		width 100%
		min-width 990px
		margin-top 20px
		thead
			border-bottom 20px solid $blue
			th
				font-size 14px
				line-height 24px
				color $grey
				font-weight 400
				padding 0 20px 0 20px
				line-height 100%
				margin-bottom 0
				border none
		tbody
			tr
				background-color $blue2
				border-bottom 10px solid $blue
			td
				padding 15px 20px
	&__text
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
		font-size 16px
		color $grey
		font-weight 400
		line-height 24px
		a
			color $white
			&:hover
				color $orange
		&--rate
			font-weight 600
			font-size 16px
			color $white
			&:before
				content '\eb2e'
				font-family 'tabler-icons'
				position relative
				font-size 18px
				line-height 24px
				font-weight normal
				color $yellow
				margin-right 5px
				margin-top 1px
		&--red
			color $red
		&--green
			color $green
		&--grey
			color $grey
	&__user
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__meta
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		h3
			color $white
			display block
			font-size 16px
			line-height 24px
			font-weight 600
			margin-bottom 0
		span
			color $grey
			font-size 14px
			line-height 22px
	&__avatar
		display block
		position relative
		width 46px
		overflow hidden
		border-radius 8px
		border 2px solid $blue
		margin-right 15px
		overflow hidden
		img
			width 100%
	&__btns
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 32px
		height 32px
		font-size 16px
		color $white
		border-radius 4px
		background-color rgba($white, .05)
		margin-right 10px
		i
			font-size 20px
		&:last-child
			margin-right 0
		&--delete
			background-color rgba($red, .1)
			i
				color $red
			&:hover
				background-color rgba($red, .2)
				i
					color $red
		&--edit
			background-color rgba(#3796f6, .1)
			i
				color #3796f6
			&:hover
				background-color rgba(#3796f6, .2)
				i
					color #3796f6
		&--banned
			background-color rgba($green, .1)
			i
				color $green
			&:hover
				background-color rgba($green, .2)
				i
					color $green
		&--view
			background-color rgba($yellow, .1)
			i
				color rgba($yellow, .8)
			&:hover
				background-color rgba($yellow, .2)
				i
					color $yellow
	@media (min-width: 768px)
		&__table
			margin-top 24px

/*==============================
	Stats
==============================*/
.stats
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	background-color $blue2
	padding 20px
	height 110px
	width 100%
	margin-top 20px
	position relative
	border-radius 8px
	i
		font-size 42px
		position absolute
		bottom 15px
		right 20px
		color $orange
	span
		font-size 16px
		color $grey
		font-weight 400
		display block
		margin-bottom 10px
	p
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-end
		margin 0
		font-size 36px
		font-weight 600
		color $white
		line-height 100%
		b
			font-size 16px
			line-height 24px
			font-weight 600
			margin-left 10px
			&.green
				color $green
			&.red
				color $red
	@media (min-width: 768px)
		margin-top 24px

/*==============================
	Dashbox
==============================*/
.dashbox
	background-color $blue2
	margin-top 20px
	border-radius 8px
	overflow hidden
	&__title
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		padding 20px
		border-bottom 1px solid $blue
		h3
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			color $white
			font-weight 400
			font-size 20px
			line-height 30px
			margin-bottom 0
			i
				font-size 24px
				margin-right 10px
				color $orange
				line-height 30px
	&__wrap
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__more
		display flex
		flex-direction row
		justify-content center
		align-items center
		width auto
		height 30px
		background-color $blue
		padding 0 10px
		font-size 14px
		margin-left 15px
		color $white
		border-radius 8px
		&:hover
			color $orange
	&__refresh
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 30px
		height 30px
		color $white
		font-size 20px
		&:hover
			color $orange
	&__table-wrap
		position relative
		display block
		width 100%
		padding 20px 0
	&__table
		width 100%
		min-width 500px
		border-spacing 0
		thead
			border-bottom 1px solid $blue
			th
				font-size 12px
				color $grey
				font-weight 400
				padding 0 10px 15px 0
				line-height 100%
				margin-bottom 0
				border none
				&:first-child
					padding-left 20px
		tbody
			tr
				border-bottom none
				background-color transparent
			td
				padding 0
				background-color transparent
				border 0px solid transparent
				&:first-child
					padding-left 20px
				&:last-child
					.dashbox__table-text
						padding-right 0
	&__table-text
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 16px
		color $white
		font-weight 400
		line-height 30px
		padding 10px 15px 0 0
		background-color transparent
		white-space nowrap
		a
			color $white
			&:hover
				color $orange
		i
			font-size 14px
			margin-right 6px
			color $yellow
			line-height 24px
			margin-top 1px
		&--rate
			font-weight 600
			font-size 16px
			i
				font-weight normal
				font-size 18px
		&--red
			color $red
		&--green
			color $green
		&--grey
			color $grey
	@media (min-width: 768px)
		margin-top 24px
		&__title
			padding 20px 30px
		&__table
			thead
				th
					&:first-child
						padding-left 30px
			tbody
				td
					&:first-child
						padding-left 30px

/*==============================
	Filter
==============================*/
.filter
	&__select
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		width auto
		min-width 120px
		margin-right 20px
		padding 0 20px
		border-radius 8px
		border none
		background $blue2
		&:focus
			box-shadow none
		&:last-child
			margin-right 0
		.ss-single
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			height 40px
			padding 0
			margin 0 !important
			color $white
			font-size 16px
		.ss-arrow
			width 8px
			height 8px
			margin 3px 0 0 6px
			path
				stroke $white
		.ss-search
			padding 0
			margin-bottom 15px
			font-size 16px
			color $grey
			width 100%
			&:last-child
				margin-bottom 0
			input
				padding 0
				background-color transparent
				color $white
				font-size 16px
				border-radius 0
				border none
				border-bottom 1px solid rgba($white, .1)
				height 40px
				&:focus
					box-shadow none
				&::placeholder
					color $grey
		.ss-list
			width 100%
			.ss-option
				font-size 16px
				color $white
				line-height 38px
				padding 0
				transition .4s ease
				&:hover
					background-color transparent
					color $orange
				&.ss-selected
					background-color transparent !important
					color $orange !important
		&.ss-content
			flex-direction column
			align-items flex-start
			border none
			border-radius 8px
			min-width 180px
			padding 15px 20px
			background $blue2
			box-shadow none
		&.ss-open-below
		&.ss-open-above
			border-radius 8px
	@media (min-width: 768px)
		&__select
			margin-right 30px
			&:last-child
				margin-right 0

/*==============================
	Paginator
==============================*/
.paginator
	display none
	flex-direction row
	justify-content center
	align-items center
	margin-top 40px
	background-color $blue2
	border none
	border-radius 8px
	height 40px
	width auto
	&__item
		span
			font-size 16px
			height 40px
			width 40px
			display flex
			flex-direction row
			justify-content center
			align-items center
			color $grey
			text-align center
			border-radius 8px
			cursor default
		a
			font-size 16px
			height 40px
			width 40px
			display flex
			flex-direction row
			justify-content center
			align-items center
			color $grey
			text-align center
			border-radius 8px
			border 2px solid transparent
		&:hover
			a
				color $orange
		&--prev
		&--next
			i
				font-size 20px
				color $grey
				transition color .4s ease
			&:hover
				i
					color $orange
		&--active
			a
				color $white
				cursor default
				border-color $orange
				&:hover
					color $white
	@media (min-width: 768px)
		display inline-flex

