@model HomeDto
@{
	int count = 0;
}
<!-- main content -->
<main class="main">
	<div class="container-fluid">
		<div class="row">
			<!-- main title -->
			<div class="col-12">
				<div class="main__title">
					<h2>Home</h2>
				</div>
			</div>
			<!-- end main title -->
			<!-- stats -->
			<div class="col-12 col-sm-6 col-xl-3">
				<div class="stats">
					<span>Subscriptions this month</span>
					<!-- or .red -->
					<p>@Model.SubscriptionCount</p>
					<i class="ti ti-diamond"></i>
				</div>
			</div>
			<!-- end stats -->
			<!-- stats -->
			<div class="col-12 col-sm-6 col-xl-3">
				<div class="stats">
					<span>Items added this month</span>
					<p>@Model.AddedItemsCount</p>
					<i class="ti ti-movie"></i>
				</div>
			</div>
			<!-- end stats -->
			<!-- stats -->
			<div class="col-12 col-sm-6 col-xl-3">
				<div class="stats">
					<span>Views this month</span>
					<p>@Model.WatchedMoviesCount</p>
					<i class="ti ti-eye"></i>
				</div>
			</div>
			<!-- end stats -->
			<!-- stats -->
			<div class="col-12 col-sm-6 col-xl-3">
				<div class="stats">
					<span>Reviews this month</span>
					<p>@Model.ReviewsCount</p>
					<i class="ti ti-star-half-filled"></i>
				</div>
			</div>
			<!-- end stats -->
		</div>

		<div class="row">
			<!-- dashbox -->
			<div class="col-12 col-xl-6">
				<div class="dashbox">

					<div class="dashbox__title">
						<h3><i class="ti ti-trophy"></i>Top Movies</h3>

						<div class="dashbox__wrap">
							<a class="dashbox__refresh" href="#"><i class="ti ti-refresh"></i></a>
						</div>
					</div>

					<div class="dashbox__table-wrap dashbox__table-wrap--1">
						<table class="dashbox__table">
							<thead>
								<tr>
									<th>ID</th>
									<th>TITLE</th>
									<th>CATEGORY</th>
									<th>RATING</th>
								</tr>
							</thead>
							@Html.Partial("AdminMoviePartialView", Model.BestMovies)

						</table>
					</div>
				</div>
			</div>
			<!-- dashbox -->
			<div class="col-12 col-xl-6">
				<div class="dashbox">
					<div class="dashbox__title">
						<h3><i class="ti ti-trophy"></i>Latest Views</h3>

						<div class="dashbox__wrap">
							<a class="dashbox__refresh" href="#"><i class="ti ti-refresh"></i></a>
						</div>
					</div>

					<div class="dashbox__table-wrap dashbox__table-wrap--2">
						<table class="dashbox__table">
							<thead>
								<tr>
									<th>ID</th>
									<th>TITLE</th>
									<th>CATEGORY</th>
									<th>RATING</th>
								</tr>
							</thead>
							@Html.Partial("AdminMoviePartialView", Model.LatestMovies)

						</table>
					</div>
				</div>
			</div>

			<!-- end dashbox -->
			<!-- dashbox -->
			<div class="col-12 col-xl-6">
				<div class="dashbox">
					<div class="dashbox__title">
						<h3><i class="ti ti-users"></i> Latest users</h3>

						<div class="dashbox__wrap">
							<a class="dashbox__refresh" href="#"><i class="ti ti-refresh"></i></a>
							<a class="dashbox__more" href="users.html">View All</a>
						</div>
					</div>

					<div class="dashbox__table-wrap dashbox__table-wrap--3">
						<table class="dashbox__table">
							<thead>
								<tr>
									<th>ID</th>
									<th>FULL NAME</th>
									<th>EMAIL</th>
									<th>USERNAME</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var user in Model.Users)
								{
									count++;
									<tr>
										<td>
											<div class="dashbox__table-text">@count</div>
										</td>
										<td>
											<div class="dashbox__table-text"><a href="#">@user.Name</a></div>
										</td>
										<td>
											<div class="dashbox__table-text dashbox__table-text--grey">@user.Email</div>
										</td>
										<td>
											<div class="dashbox__table-text">@user.UserName</div>
										</td>
									</tr>

								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- end dashbox -->
			<!-- dashbox -->
			<div class="col-12 col-xl-6">
				<div class="dashbox">
					<div class="dashbox__title">
						<h3><i class="ti ti-trophy"></i>Expected Premieres</h3>

						<div class="dashbox__wrap">
							<a class="dashbox__refresh" href="#"><i class="ti ti-refresh"></i></a>
						</div>
					</div>

					<div class="dashbox__table-wrap dashbox__table-wrap--4">
						<table class="dashbox__table">
							<thead>
								<tr>
									<th>ID</th>
									<th>TITLE</th>
									<th>CATEGORY</th>
									<th>RATING</th>
								</tr>
							</thead>
							@Html.Partial("AdminMoviePartialView", Model.ExpectedMovies)

						</table>
					</div>
				</div>
			</div>
			<!-- end dashbox -->
		</div>
		<!-- end dashbox -->
	</div>
</main>
<!-- end main content -->
